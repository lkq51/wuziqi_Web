<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

	<class name="model.UserPo" table="user" schema="wuziqi">
		<id name="id">
			<column name="id" sql-type="int(30)"/>
		</id>
		<property name="username">
			<column name="username" sql-type="varchar(20)" length="20"/>
		</property>
		<property name="password">
			<column name="password" sql-type="varchar(30)" length="30"/>
		</property>
		<property name="email">
			<column name="email" sql-type="varchar(120)" length="120" not-null="true"/>
		</property>
	</class>
</hibernate-mapping>