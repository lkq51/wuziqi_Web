<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

	<class name="base.model.UserPo" table="user" schema="wuziqi">
		<id name="id">
			<column name="id" sql-type="int(255)"/>
		</id>
		<property name="admin">
			<column name="admin" sql-type="bit(1)"/>
		</property>
		<property name="username">
			<column name="username" sql-type="varchar(255)"/>
		</property>
		<property name="password">
			<column name="password" sql-type="varchar(255)"/>
		</property>
		<property name="email">
			<column name="email" sql-type="varchar(255)" not-null="true"/>
		</property>
	</class>
</hibernate-mapping>