<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

	<class name="base.model.User" table="user" schema="wuziqi">
		<id name="id">
			<column name="_id" sql-type="int(255)"/>
		</id>
		<property name="userid">
			<column name="userid" sql-type="int(255) unsigned zerofill"/>
		</property>
		<property name="username">
			<column name="username" sql-type="varchar(255)"/>
		</property>
		<property name="password">
			<column name="password" sql-type="varchar(255)"/>
		</property>
		<property name="status">
			<column name="status" sql-type="bit(1)"/>
		</property>
	</class>
</hibernate-mapping>